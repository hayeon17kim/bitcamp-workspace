<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="BoardMapper2">

  <resultMap type="Board" id="BoardMap">
    <id column="board_id" property="no"/>
    <!-- 
    <result column="title" property="title"/>
    -->
    <result column="contents" property="content"/>
    <result column="created_date" property="registeredDate"/>
    <result column="view_count" property="viewCount"/>
  </resultMap>
  
  <!-- 중복해서 사용되는 SQL을 별도로 정의하기 -->
  <sql id="sql1">
    select 
      board_id,
      title, 
      contents, 
      created_date,
      view_count 
    from x_board
  </sql>
  
  <select id="select1" resultMap="BoardMap" parameterType="int">
    <include refid="sql1"/>
    where board_id = #{value}
  </select>
  
  <select id="select2" resultMap="BoardMap" parameterType="int">
    <include refid="sql1"/>
  </select>
  
  <!-- if 조건문
  => 조건에 따라 생성할 SQL문을 제어할 수 있다.
  => 문법) <if test="조건">SQL문</if>
   -->
  <select id="select3" resultMap="BoardMap" parameterType="int">
    <include refid="sql1"/>
    <if test="no != null">
      where board_id = #{no}
    </if>
  </select>
  
  <select id="select4" resultMap="BoardMap" parameterType="map">
    <include refid="sql1"/>
    <if test="item == 1">
      where board_id = #{keyword}
    </if>
    <if test="item == 2">
      where title like concat('%', #{keyword}, '%')
    </if>
    <if test="item == 3">
      where contents like concat('%', #{keyword}, '%')
    </if>
  </select>
  
  <select id="select5" resultMap="BoardMap" parameterType="map">
    <include refid="sql1"/>
    where
    <if test="no != null">
      board_id = #{no}
    </if>
    <if test="title != null">
      or title like concat('%', #{title}, '%')
    </if>
    <if test="content != null">
      or contents like concat('%', #{content}, '%')
    </if>
  </select>
  
  <select id="select6" resultMap="BoardMap" parameterType="map">
    <include refid="sql1"/>
    where 1=0  <!-- or 앞에 조건이 없을 경우를 대비하여 임의 조건을 삽입
                    단 임의 조건은 실행을 영향을 끼치지 않아야 한다. -->
    <if test="no != null">
      or board_id = #{no}
    </if>
    <if test="title != null">
      or title like concat('%', #{title}, '%')
    </if>
    <if test="content != null">
      or contents like concat('%', #{content}, '%')
    </if>
  </select>  
  
  <select id="select7" resultMap="BoardMap" parameterType="map">
    <include refid="sql1"/>
    <where> <!-- or/and 앞에 아무것도 없을 때 or/and 를 자동으로 제거한다. -->
	    <if test="no != null">
	      board_id = #{no}
	    </if>
	    <if test="title != null">
	      or title like concat('%', #{title}, '%')
	    </if>
	    <if test="content != null">
	      or contents like concat('%', #{content}, '%')
	    </if>
    </where>
  </select>  
  
  <select id="select8" resultMap="BoardMap" parameterType="map">
    <include refid="sql1"/>
    <trim prefix="where" prefixOverrides="OR | AND"> 
      <!-- or/and 앞에 아무것도 없을 때 or/and 를 자동으로 제거한다. -->
      <if test="no != null">
        board_id = #{no}
      </if>
      <if test="title != null">
        or title like concat('%', #{title}, '%')
      </if>
      <if test="content != null">
        or contents like concat('%', #{content}, '%')
      </if>
    </trim>
  </select>  
  
  <select id="select21" resultMap="BoardMap" parameterType="map">
    <include refid="sql1"/>
    where
    <choose>
	    <when test="item == 'no'">
	      board_id = #{keyword}
	    </when>
	    <when test='item == "title"'>
	      title like concat('%', #{keyword}, '%')
	    </when>
	    <otherwise>
	      contents like concat('%', #{keyword}, '%')
	    </otherwise>
	  </choose>
  </select>  
  
  <update id="update1" parameterType="map">
    update x_board set
      title=#{title}
    where board_id=#{no}
  </update>
  <update id="update2" parameterType="map">
    update x_board set
      contents=#{content}
    where board_id=#{no}
  </update>
  <update id="update3" parameterType="map">
    update x_board set
      title=#{title},
      contents=#{content}
    where board_id=#{no}
  </update>
  
  <update id="update4" parameterType="map">
    update x_board 
    <set>
      <if test="title != null">title=#{title},</if>   
      <if test="content != null">contents=#{content}</if>  
    </set> 
    where board_id=#{no}
  </update>
  
  <select id="select22" resultMap="BoardMap" parameterType="map">
    <include refid="sql1"/>
    <where>
      <if test="no0 != null">
        board_id = #{no0}
      </if>
      <if test="no1 != null">
        or board_id = #{no1}
      </if>
      <if test="no2 != null">
        or board_id = #{no2}
      </if>
      <if test="no3 != null">
        or board_id = #{no3}
      </if>
      <if test="no4 != null">
        or board_id = #{no4}
      </if>
    </where>
  </select>  
  <select id="select23" resultMap="BoardMap" parameterType="map">
    <include refid="sql1"/>
    <where>
      <foreach collection="noList" item="no">
        or board_id = #{no}
      </foreach>
    </where>
  </select>
  <select id="select24" resultMap="BoardMap" parameterType="map">
    <include refid="sql1"/>
    <where>
      board_id in /* (1, 2, 11, 12) */
      <foreach collection="noList" item="no" open="(" separator="," close=")">
        #{no}
      </foreach>
    </where>
  </select>
  <select id="select25" resultMap="BoardMap" parameterType="map">
    <include refid="sql1"/>
    <where>
      <foreach collection="words" item="word">
        or title like concat('%', #{word}, '%')
      </foreach>
    </where>
  </select>
  <select id="select26" resultMap="BoardMap" parameterType="map">
    <bind name="titlePattern" value="'%' + _parameter.title + '%'"/>
    <include refid="sql1"/>
    <where>
        title like #{titlePattern}
    </where>
  </select>
</mapper>







