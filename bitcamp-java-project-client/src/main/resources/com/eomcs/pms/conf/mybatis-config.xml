<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
  <!-- 설정 파일에서 사용할 .properties 정보 -->
  <!-- 일반 파일의 경로는 "."가 아니라 "/"를 사용한다. -->
  <properties resource="com/eomcs/pms/conf/jdbc.properties"></properties>
	<!-- DBMS 접속 정보들 -->
  <environments default="development">
  
    <!-- 한 개의 DBMS 접속 정보 -->
    <environment id="development">
    
    	<!-- mybatis가 트랜잭션을 다룰 때 사요애할 방법을 지정 => JDBC API 사용 -->
      <transactionManager type="JDBC"/>
      
      <!-- 데이터베이스의 연결 정보 => jdbc.properties 파일에 설정된 key와 value-->
      <dataSource type="POOLED">
      <!--  <property name="마이바티스에서 사용하는 이름" value="값" -->
        <property name="driver" value="${jdbc.driver}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
      </dataSource>
    </environment>
  </environments>
  <!-- SQL문이 들어 있는 파일들 -->
  <mappers>
    <mapper resource="com/eomcs/pms/mapper/BoardMapper.xml"/>
  </mappers>
</configuration>